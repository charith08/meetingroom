<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "/custom.css" %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if is_admin? %>
  <div>
    <p class="heading"> Create a new Meeting Room </p>

</div>

<div class="col-md-8">
    <% if @user.meetings.any? %>
      <h3>meetings (<%= @user.meetings.count %>)</h3>
      <ol class="meetings">
        <%= render @meetings %>
      </ol>

    <% end %>
  </div>
</div>
<% end %>

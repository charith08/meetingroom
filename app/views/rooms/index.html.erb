<% provide(:title, "View All Rooms") %>

<h1>Rooms</h1>

<table class="table">
  <thead  class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.location %></td>
        <td><%= room.status %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to_if(logged_in? && is_admin?, 'Edit', edit_room_path(room)) do
               link_to("","#")
                end %>
        </td>
        <td><%= link_to_if(logged_in? && is_admin?, 'Delete',  room_path(room.id), method: :delete, data: { confirm: 'Are you sure to delete this meeting room?' }) do
         link_to("","#")
                end  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
